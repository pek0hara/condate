// Firebase設定ファイルのテンプレート
// 使用方法:
// 1. このファイルを firebase-init.js にコピー
// 2. firebaseConfig の値を Firebase Console から取得した実際の値に置き換える
// 3. firebase-init.js は .gitignore に含まれているため、Git にコミットされません

import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
import { getFirestore } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';

// Firebase設定 (Firebase Console から取得した値に置き換えてください)
const firebaseConfig = {
  apiKey: "your-api-key-here",
  authDomain: "your-project-id.firebaseapp.com",
  projectId: "your-project-id",
  storageBucket: "your-project-id.firebasestorage.app",
  messagingSenderId: "your-sender-id",
  appId: "your-app-id",
  measurementId: "your-measurement-id"
};

// Firebase初期化
const app = initializeApp(firebaseConfig);

// Firestore初期化
const db = getFirestore(app);

// エクスポート
export { db };